<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <mapped-superclass name="FSi\Bundle\NewsBundle\Model\News" table="fsi_news">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="title" column="title" type="string" />
        <field name="date" column="date" type="datetime" nullable="true"/>
        <field name="introduction" column="introduction" type="text" />
        <field name="content" column="content" type="text" />
    </mapped-superclass>

</doctrine-mapping>